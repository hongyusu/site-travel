# Production Environment Configuration
# This file will be populated during deployment

# Application
APP_NAME=FindTravelMate
APP_VERSION=1.0.0

# Server Configuration
POSTGRES_PASSWORD=CHANGE_ME_IN_DEPLOYMENT
SECRET_KEY=CHANGE_ME_IN_DEPLOYMENT
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
PYTHON_ENV=production
LOG_LEVEL=INFO
NODE_ENV=production

# URLs (will be updated during deployment)
NEXT_PUBLIC_API_URL=http://YOUR_EC2_IP/api/v1
CORS_ORIGINS=["http://YOUR_EC2_IP", "http://YOUR_EC2_IP:3000"]

# Database
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/findtravelmate
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://redis:6379/0

# Optional Features
ENABLE_REGISTRATION=true
ENABLE_VENDOR_SIGNUP=true
ENABLE_REVIEWS=true
ENABLE_WISHLIST=true

# Database Initialization
AUTO_INIT_DB=true

# Ports (default values)
POSTGRES_PORT=5432
REDIS_PORT=6379
BACKEND_PORT=8000
FRONTEND_PORT=3000

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "gif", "webp"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Commission
DEFAULT_COMMISSION_RATE=20.0

# Booking
FREE_CANCELLATION_HOURS=24
DEFAULT_CURRENCY=EUR