# Production Environment Configuration
# Copy this file to .env and fill in with production values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://postgres:CHANGE_ME_STRONG_PASSWORD@postgres:5432/getyourguide
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ===========================================
# SECURITY SETTINGS (CRITICAL!)
# ===========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS SETTINGS
# ===========================================
# Add your production domain(s)
CORS_ORIGINS='["https://yourdomain.com","https://www.yourdomain.com"]'

# ===========================================
# APPLICATION SETTINGS
# ===========================================
PYTHON_ENV=production
LOG_LEVEL=INFO
AUTO_INIT_DB=false

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# EMAIL CONFIGURATION (Optional - Future)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=GetYourGuide

# ===========================================
# FILE UPLOAD SETTINGS (Optional - Future)
# ===========================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# ===========================================
# RATE LIMITING (Optional - Future)
# ===========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===========================================
# MONITORING & LOGGING (Optional - Future)
# ===========================================
SENTRY_DSN=
LOG_FILE_PATH=/var/log/getyourguide/app.log

# ===========================================
# PAYMENT GATEWAY (Optional - Future)
# ===========================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ===========================================
# AWS S3 STORAGE (Optional - Future)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=getyourguide-uploads
AWS_REGION=us-east-1

# ===========================================
# PGADMIN (Development/Staging only)
# ===========================================
PGADMIN_EMAIL=admin@yourdomain.local
PGADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ===========================================
# SECURITY HEADERS & SSL
# ===========================================
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
SECURE_COOKIES=true

# ===========================================
# DATABASE CONNECTION POOL
# ===========================================
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=getyourguide-backups

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
ENABLE_REGISTRATION=true
ENABLE_VENDOR_SIGNUP=true
ENABLE_REVIEWS=true
ENABLE_WISHLIST=true

# ===========================================
# EXTERNAL SERVICES (Optional - Future)
# ===========================================
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# ===========================================
# ANALYTICS (Optional - Future)
# ===========================================
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# ===========================================
# DOMAIN & URLs
# ===========================================
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com
ADMIN_URL=https://admin.yourdomain.com
