# Application
APP_NAME="GetYourGuide Clone"
APP_VERSION="1.0.0"
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/getyourguide
DATABASE_ECHO=False

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# File Upload
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "gif", "webp"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Commission
DEFAULT_COMMISSION_RATE=20.0  # percentage

# Booking
FREE_CANCELLATION_HOURS=24
DEFAULT_CURRENCY=EUR